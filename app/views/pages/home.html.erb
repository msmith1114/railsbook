
<% @posts.each do |post| %>
  <p>
    <%= post.content %>
  </p>
  <% if post.liked? %>
    <i class="far fa-thumbs-up"> Like</i>
  <% else %>
    <%= link_to "Like", like_path(post_id: post), remote: true, method: :post  %>
  <% end %>
<% end %>

<hr>

<%= form_for [@user,@post,Post.new] do |f| %>
  <%= f.text_field :content %>
  <%= f.submit "Create" %>
<% end %>
